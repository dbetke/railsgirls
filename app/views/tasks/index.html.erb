<h1>Listing tasks</h1>

<table border="1">
  <tr>
    <th>Name</th>
    <th>Team members</th>
    <th>Notes</th>
    <th>Idea</th>
    <th>Completed</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td width='150'><%= task.name %></td>
    <td width='200'><%= task.team_members %></td>
    <td width='200'><%= task.notes %></td>
    <td width='150'><%= task.idea.name %></td>
    <td width='50'><%= task.completed %></td>
    <td width='50'><%= link_to 'Show', task %></td>
    <td width='50'><%= link_to 'Edit', edit_task_path(task) %></td>
    <td width='50'><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

